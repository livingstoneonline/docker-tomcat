# This configuration file is used, if you want to manage the configuration in
# Fedora objects in a Fedora repository.
#
# There are two actions:
# - http://.../fedoragsearch/rest?operation=configure&configureAction=setFgsConfigObjects
#       which copies the configuration from the configuration files into the Fedora objects,
# - http://.../fedoragsearch/rest?operation=configure&configureAction=getFgsConfigObjects
#       which copies the configuration from the Fedora objects into the configuration files.
#
# The Fedora repository used for the config objects is by default the same as
# the repository to be indexed. If you want another repository, then change the
# property values in the runtime fgsconfigObjects.properties
fgsconfigObjects.fedoraSoap=http://{{ getv "/host" }}:{{ getv "/host/port" }}/fedora
fgsconfigObjects.fedoraUser={{ getv "/admin/user" }}
fgsconfigObjects.fedoraPass={{ getv "/admin/password" }}
fgsconfigObjects.trustStorePath=
fgsconfigObjects.trustStorePass=
fgsconfigObjects.finalConfigPath=/opt/tomcat/webapps/fedoragsearch/WEB-INF/classes